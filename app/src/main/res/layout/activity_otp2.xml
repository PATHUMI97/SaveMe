<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/pink"
    android:layout_height="match_parent"
    tools:context=".otp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/otp_img_1"
            android:layout_width="101dp"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:contentDescription="OTP Vertification" />

        <TextView
            android:id="@+id/otp_txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="OTP Vertification"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/edt_Mobile"
            android:layout_width="252dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_button"
            android:hint="Your Mobile No"
            android:inputType="number"
            android:maxLength="10"
            android:paddingLeft="70dp"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/img_sent"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_below="@+id/edt_password"
            android:layout_marginTop="-50dp"
            android:layout_marginRight="-100dp"
            android:background="@drawable/transparent_button"
            android:src="@drawable/arrow"
            app:tint="@color/eerie_black" />


        <EditText
            android:id="@+id/otp"
            android:layout_width="252dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:hint="Enter OTP No"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="80dp"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/didnt_get_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:text="Didn't receive the OTP ?"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/resend_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:text="Resent OTP"
            android:textAllCaps="false"
            android:textSize="15dp" />

        <Button
            android:id="@+id/Register_btn"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/eerie_black"
            android:text="Verify"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <ProgressBar
            android:id="@+id/progess_bar_otp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:visibility="gone" />


    </LinearLayout>

</RelativeLayout>